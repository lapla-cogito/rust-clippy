#[allow(clippy::assign_op_pattern, clippy::string_add, unused)]
#[warn(clippy::string_add_assign)]
fn main() {
    // ignores assignment distinction
    let mut x = String::new();

    for _ in 1..3 {
        x.push('.');
        //~^ string_add_assign
    }

    let y = String::new();
    let z = y + "...";

    assert_eq!(&x, &z);

    let mut x = 1;
    x = x + 1;
    assert_eq!(2, x);

    let mut x = "Hello".to_owned();
    x.push_str(", World");
    //~^ string_add_assign

    let mut x = "Hello".to_owned();
    let y = ", World".to_owned();
    x.push_str(&y);
    //~^ string_add_assign

    let mut x = "'".to_owned();
    x.push('\'');
    //~^ string_add_assign
}
